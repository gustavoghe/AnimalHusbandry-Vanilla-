<?xml version="1.0" encoding="utf-8" ?>

<RecipeDefs>

	<RecipeDef>
		<defName>MakeAnimalRationV</defName>
		<label>Make Veggie Animal Ration</label>
		<description>Make animal ration using butcher´s table. It can be used with a Ration Tank to create pellets</description>
		<jobString>Making Veggie Animal Ration</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>300</workAmount>
		<ingredients>
			<li>
			    <filter>
			      <thingDefs>
	 		        <li>Rawwheat</li>
			        <li>RawCorn</li>
			        <li>RawRice</li>
			        <li>Rawoats</li>
					<li>Hay</li>
	     		  </thingDefs>
	  		    </filter>
			<count>75</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
			    <li>Rawwheat</li>
			    <li>RawCorn</li>
			    <li>RawRice</li>
			    <li>Rawoats</li>
			    <li>Hay</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AnimalRationV>50</AnimalRationV>
		</products>
		<workSkill>Cooking</workSkill>
  		<recipeUsers>
			  <li>TableButcher</li>
		</recipeUsers>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>2</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>
	
	<RecipeDef>		
		<defName>MakeAnimalRationP</defName>
		<label>Make Protein Animal Ration</label>
		<description>Make Protein Animal Ration using butcher´s table. It can be used with a Ration Tank to create Protein Pellets.</description>
		<jobString>Making  Protein Animal Ration</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>300</workAmount>
		<ingredients>
			<li>
			    <filter>
					<thingDefs>
						<li>Rawwheat</li>
						<li>RawCorn</li>
						<li>RawRice</li>
						<li>Rawoats</li>
						<li>Hay</li>
					</thingDefs>
	  		    </filter>
				<count>75</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
			    <li>Rawwheat</li>
			    <li>RawCorn</li>
			    <li>RawRice</li>
			    <li>Rawoats</li>
			    <li>Hay</li>
			</thingDefs>
			<categories>
				<li>MeatRaw</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<AnimalRationP>50</AnimalRationP>
		</products>
		<workSkill>Cooking</workSkill>
  		<recipeUsers>
			  <li>TableButcher</li>
		</recipeUsers>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
	
	</RecipeDef>
  
 </RecipeDefs>